<h1 class="d-inline-block"><%= @task.title %></h1>
<%= link_to 'Edit this task', edit_task_path(@task), class:'btn btn-secondary d-inline-block float-right' %>
<div class='task-details'><%= @task.details %></div>
<% if @task.completed %>
  <p><%= '☑　This task is completed' %></p>
<% else %>
  <p><%= '□　This task is not completed yet!' %></p>
<% end %>
<%= link_to tasks_path do %>
   <i class="fas fa-undo-alt"></i> Back to list
<% end %>

